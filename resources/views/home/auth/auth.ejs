<script>


    function typeChanger(){
        let input = document.querySelector('.passinput')
        let icon = document.querySelector('.togglePassword')

        if(input.type === 'password'){
 
            input.type = 'text'
            icon.classList.replace('fa-eye' , 'fa-eye-slash')

        } else {
            input.type = 'password'
            icon.classList.replace('fa-eye-slash' , 'fa-eye')

        }

        
    }

    function typeChanger2(){
        let input = document.querySelector('.passinput2')
        let icon = document.querySelector('.togglePassword2')

        if(input.type === 'password'){
 
            input.type = 'text'
            icon.classList.replace('fa-eye' , 'fa-eye-slash')

        } else {
            input.type = 'password' 
            icon.classList.replace('fa-eye-slash' , 'fa-eye')

        }

        
    }
    

    document.getElementById('close').addEventListener("click", function() {
    this.parentElement.style.display = 'none';
  });
</script>